<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.asu.dota2guide.MainActivity" >

    <Gallery
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/strengthbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Strength"
        android:onClick="strength" />

    <Button
        android:id="@+id/agilitybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/strengthbutton"
        android:layout_toRightOf="@+id/strengthbutton"
        android:text="Agility"
        android:onClick="agility" />

    <Button
        android:id="@+id/intelligencebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/agilitybutton"
        android:layout_alignBottom="@+id/agilitybutton"
        android:layout_toRightOf="@+id/agilitybutton"
        android:text="Intelligence"
        android:onClick="intelligence" />

    <Button
        android:id="@+id/helpbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/strengthbutton"
        android:layout_alignParentBottom="true"
        android:text="Help"
        android:onClick="help" />

    <Button
        android:id="@+id/tipsbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/helpbutton"
        android:layout_alignBottom="@+id/helpbutton"
        android:layout_toRightOf="@+id/helpbutton"
        android:onClick="tips"
        android:text="Don&apos;t Be a NEWB" />

    <Button
        android:id="@+id/creditsbutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/tipsbutton"
        android:layout_alignRight="@+id/intelligencebutton"
        android:layout_toRightOf="@+id/tipsbutton"
        android:background="@drawable/android_dota"
        android:text="Credits"
        android:onClick="credits" />

</RelativeLayout>
